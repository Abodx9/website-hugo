*{box-sizing:border-box}body{font:100% helvetica neue,Arial,sans-serif;margin:0;padding:0;background-color:#fff}p{line-height:1.5}.wrapper{max-width:900px;margin:2rem auto}.background-main{background-color:#f2a23a}header a{display:block;text-decoration:none;color:#111}header a .hidden-title{display:none}header a .site-logo{display:block;width:40rem;max-width:100%;margin:0 auto}header a .site-subtitle{text-align:center;font-size:4rem}header nav input,header nav label{display:none}header nav ul{padding:0;list-style:none;display:grid;grid-template-columns:auto auto auto auto auto}header nav ul li{margin:.1rem}.button{font-weight:700;margin:0 .1rem;padding:.9rem;background-color:#f2a23a;color:#fff;text-align:center;text-decoration:none;display:inline-block;width:100%}.button:hover{cursor:pointer;opacity:.8}main.columns{display:grid;grid-template-areas:"about aside" "events aside" "team team";grid-template-columns:2fr 1fr}main section{padding:.5rem}main #about{grid-area:about}main #events{grid-area:events}main #team{grid-area:team;background-color:#f2a23a}main #team h2{text-align:center;color:#fff}main #team ul{list-style:none;margin:0;padding:0;text-align:center}main #team ul li{display:inline-block;position:relative;width:12rem;height:12rem;margin:.4rem .3rem}main #team ul li .front{position:absolute;bottom:0;top:0;animation:flipVisible 250ms}main #team ul li .front img{max-width:100%}main #team ul li .front h4{color:#fff;text-shadow:0 0 .3rem #111;position:absolute;bottom:0;width:100%}main #team ul li .back{background-color:#fff;margin:0;position:absolute;bottom:0;top:0;width:100%;padding:1rem;transform:rotateY(-90deg);animation:flipAway 250ms}main #team ul li:hover .front{animation:flipAway 250ms forwards}main #team ul li:hover .back{animation:flipVisible 250ms forwards}main aside{grid-area:aside;padding:.5rem 1.5rem;border-left:1px solid #f2a23a}main aside .social{list-style:none;display:flex;margin:0;padding:0}main aside .social a{padding:.5rem}main aside .social a svg{width:1rem;height:1rem}@keyframes flipAway{0%{transform:rotateY(0deg)}50%{transform:rotateY(90deg)}100%{transform:rotateY(90deg)}}@keyframes flipVisible{0%{transform:rotateY(-90deg)}50%{transform:rotateY(-90deg)}100%{transform:rotateY(0deg)}}#all-posts h2{text-align:center}.post-list{list-style:none;margin:0;padding:0}.post-list li{margin:1rem 0;padding:0}.post-list li:not(:first-child){border-top:1px solid #111}.post-list li a{color:#111;text-decoration:none}.post-list li a:hover{color:#f2a23a}.post-list li .ellipsis{text-align:center}.post .date,.post .authors{display:inline-block}.post .authors,.post .tags{list-style:none}.post .authors li,.post .tags li{display:inline-block}.post .authors .list-separator:last-of-type,.post .tags .list-separator:last-of-type{display:none}.post .tags{padding:0}.post .tags li{border-radius:.5rem;padding:.1rem .4rem;border:1px dotted #111}.post .tags li:hover{cursor:pointer;border:1px solid #f2a23a;background-color:#f2a23a}footer p{text-align:center;opacity:.7}